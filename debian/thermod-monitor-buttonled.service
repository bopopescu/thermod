[Unit]
Description=Thermod ButtonLED monitor
Requires=network.target
Wants=thermod.service
After=network.target thermod.service

[Service]
Type=simple
User=thermod
PermissionsStartOnly=true
ExecStart=/usr/bin/thermod-monitor-buttonled --daemon
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target
